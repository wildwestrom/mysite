{
    "private": true,
    "scripts": {
        "deps": "yarn install && ./bin/submodules",
        "build:css": "export NODE_ENV=production && tailwindcss -o public/css/main.css --minify",
        "build:app": "shadow-cljs release app",
        "build:org-to-data": "uniorg-util --edn -i posts -o public/posts -m _ALL_POSTS",
        "release": "yarn deps && run-s build:org-to-data build:css build:app",
        "watch:css": "TAILWIND_MODE=watch tailwindcss -o public/css/main.css --watch",
        "watch:app": "shadow-cljs watch app",
        "start": "run-p watch:css watch:app",
        "report": "shadow-cljs run shadow.cljs.build-report app report.html"
    },
    "devDependencies": {
        "@tailwindcss/line-clamp": "^0.2.2",
        "@tailwindcss/typography": "^0.4.0",
        "is-color-stop": "^1.1.0",
        "nightwind": "^1.1.12",
        "npm-run-all": "^4.1.5",
        "postcss-import": "^14.0.2",
        "shadow-cljs": "2.15.10",
        "tailwindcss": "^2.2.16",
        "uniorg-util": "^0.2.1"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.36",
        "@fortawesome/free-brands-svg-icons": "^5.15.4",
        "@fortawesome/free-regular-svg-icons": "^5.15.4",
        "@fortawesome/free-solid-svg-icons": "^5.15.4",
        "@fortawesome/react-fontawesome": "^0.1.15",
        "@headlessui/react": "^1.4.1",
        "fitvids": "^2.1.1",
        "highlight.js": "^11.2.0",
        "obfuscate": "^0.0.11",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-obfuscate": "^3.6.8"
    }
}
