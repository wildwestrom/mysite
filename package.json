{
    "private": true,
    "scripts": {
        "deps": "yarn install",
        "build:css": "export NODE_ENV=production && tailwindcss -o public/css/main.css",
        "build:app": "shadow-cljs release app",
        "build:org-to-data": "uniorg-util --edn -i posts -o public/posts -m _ALL_POSTS",
        "release": "yarn deps && run-s build:org-to-data build:css build:app",
        "watch:css": "tailwindcss -o public/css/main.css --watch",
        "watch:app": "shadow-cljs watch app",
        "watch": "run-p watch:css watch:app"
    },
    "devDependencies": {
        "@tailwindcss/line-clamp": "^0.2.0",
        "@tailwindcss/typography": "^0.4.0",
        "nightwind": "^1.1.12",
        "npm-run-all": "^4.1.5",
        "shadow-cljs": "2.15.8",
        "tailwindcss": "^2.2.9",
        "uniorg-util": "^0.2.1"
    },
    "dependencies": {
        "highlight.js": "^11.2.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    }
}
