{
    "private": true,
    "scripts": {
        "build:index": "mkdir -p public/ && clojure -M src/app/index.clj",
        "build:css": "export NODE_ENV=production && postcss src/css/main.css -o public/css/main.css",
        "build:app": "shadow-cljs release app",
        "build:org-json": "uniorg-util -i posts -o public/posts",
        "release": "run-s build:org-json build:index build:css build:app",
        "watch:css": "postcss src/css/main.css -o public/css/main.css --watch",
        "watch:app": "shadow-cljs watch app",
        "start": "run-p watch:css watch:app"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@tailwindcss/line-clamp": "^0.2.0",
        "@tailwindcss/typography": "^0.4.0",
        "autoprefixer": "^10.2.3",
        "cssnano": "^5.0.1",
        "is-buffer": "^2.0.5",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.5",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.0",
        "rehype-stringify": "^8.0.0",
        "shadow-cljs": "2.14.6",
        "tailwindcss": "^2.2.4",
        "unified": "^9.2.1",
        "uniorg-extract-keywords": "^0.3.0",
        "uniorg-parse": "^0.3.0",
        "uniorg-rehype": "^0.3.0"
    },
    "dependencies": {
        "highlight.js": "^11.0.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "uniorg-util": "^0.1.7"
    }
}
